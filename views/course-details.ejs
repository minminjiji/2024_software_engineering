<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= tour.POI_NM %> - 세부 정보</title>
        <link
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <script
            type="text/javascript"
            src="//dapi.kakao.com/v2/maps/sdk.js?appkey=f16de7f8d3ee2ae208ff54f169060951"
        ></script>
    </head>
    <body>
        <div class="container">
            <h1 class="my-4"><%= tour.POI_NM %></h1>
            <p><strong>관광지 유형:</strong> <%= tour.CL_NM %></p>
            <p>
                <strong>지역:</strong> <%= tour.CTPRVN_NM %> <%= tour.SIGNGU_NM
                %>
            </p>
            <p><strong>세부 정보:</strong> <%= tour.ORIGIN_NM %></p>
            <div id="map" style="width: 100%; height: 400px"></div>
            <button
                class="btn btn-primary"
                onclick="saveToWishlist('<%= tour.num %>', '<%= tour.POI_NM %>', '<%= tour.CL_NM %>', '<%= tour.CTPRVN_NM %> <%= tour.SIGNGU_NM%>', '<%= tour.ORIGIN_NM %>')"
            >
                관심 리스트 저장
            </button>
            <button class="btn btn-secondary" onclick="history.back()">
                뒤로가기
            </button>
        </div>
        <script>
            function initMap() {
                var location = {
                    lat: parseFloat("<%= tour.LC_LA %>"),
                    lng: parseFloat("<%= tour.LC_LO %>"),
                };
                var container = document.getElementById("map");
                var options = {
                    center: new kakao.maps.LatLng(location.lat, location.lng),
                    level: 3,
                };
                var map = new kakao.maps.Map(container, options);
                var markerPosition = new kakao.maps.LatLng(
                    location.lat,
                    location.lng
                );
                var marker = new kakao.maps.Marker({
                    position: markerPosition,
                });
                marker.setMap(map);
            }
            kakao.maps.load(initMap);

            function saveToWishlist(tourId, POI_NM, CL_NM, location, detail) {
                console.log("Saving tour with ID:", tourId); // 추가된 콘솔 로그
                fetch("/add-to-wishlist", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        tour_id: tourId,
                        title: POI_NM,
                        subject: CL_NM,
                        location: location,
                        detail: detail,
                    }),
                })
                    .then((response) => {
                        if (!response.ok) {
                            throw new Error(
                                "Network response was not ok: " +
                                    response.statusText
                            );
                        }
                        return response.json();
                    })
                    .then((data) => {
                        if (data.success) {
                            if (
                                confirm(
                                    "관심 리스트에 저장되었습니다. 관심 리스트로 가시겠습니까?"
                                )
                            ) {
                                window.location.href = "/wishlist";
                            }
                        } else {
                            console.error("Error:", data.message); // 추가된 콘솔 로그
                            alert("저장 중 오류가 발생했습니다.");
                        }
                    })
                    .catch((error) => {
                        console.error("Fetch error:", error); // 추가된 콘솔 로그
                        alert("저장 중 오류가 발생했습니다.");
                    });
            }
        </script>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
</html>
